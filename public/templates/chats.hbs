<section style="background-color: #eee;" class="rounded border">
    <div class="container py-5">
    {{#if items.length}}
        <div class="row justify-content-center mb-3">
        <div class="col-md-12 col-xl-10">
            <h4 class="mb-3">Conversaciones</h4>
        </div>
        </div>
        {{#each items}}
            <div class="row justify-content-center mb-3">
                <div class="col-md-12 col-xl-10">
                        <div class="card">
                        <div class="card-body d-flex justify-content-between">
                            <div class="p-2">
                                <img class="rounded-circle article-img" src="{{ this.imageProfile }}" style="width: 40px; height: 40px; object-fit:cover">
                                {{ this.email }}
                            </div>
                            <div class="p-2">
                                <a href="/chat/{{ this.email }}" class="btn btn-secondary">Ver mensajes</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
                <div class="card">
                    <div class="card-body">
                        <div class="alert alert-info" role="alert">Sin conversaciones generadas</div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
    </div>
</section>