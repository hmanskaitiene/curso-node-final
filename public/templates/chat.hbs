<section style="background-color: #eee;" class="rounded border ">
    <div class="container py-5">
    {{#if items.length}}
        <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
                <h4 class="mb-3">Mensajes de: {{ email }}</h4>
            </div>
        </div>
        {{#each items}}
            <div class="row justify-content-center mb-3">
                <div class="col-md-12 col-xl-10">
                    {{#if (eq this.tipo 'SYSTEM') }}
                        <div class="chat-message darker">
                        <img class="rounded-circle article-img" src="{{ this.imageProfile }}"  style="width: 40px; height: 40px; object-fit:cover">
                        <p><strong>(Admin)</strong> {{this.mensaje}}</p>
                        <span class="time-right">{{date-human-read this.fecha}}</span>
                        </div>
                    {{else}}
                        <div class="chat-message">
                        <img class="rounded-circle article-img" src="{{ this.imageProfile }}"  style="width: 40px; height: 40px; object-fit:cover">
                        <p>{{this.mensaje}}</p>
                        <span class="time-right">{{date-human-read this.fecha}}</span>
                        </div>
                    {{/if}}  
                </div>
            </div>
        {{/each}}
    {{else}}
        <div class="row justify-content-center mb-3">
            <div class="col-md-12 col-xl-10">
                <div class="card">
                    <div class="card-body">
                        <div class="alert alert-info" role="alert">Sin mensajes</div>
                    </div>
                </div>
            </div>
        </div>
    {{/if}}
    </div>
</section>